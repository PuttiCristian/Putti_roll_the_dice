<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/activity_main_text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="guess the secret number"
        app:layout_constraintBottom_toTopOf="@+id/ButtonRoll"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/activity_main_textView1" />

    <ImageView
        android:id="@+id/activity_main_textView1"
        android:layout_width="153dp"
        android:layout_height="199dp"
        app:layout_constraintBottom_toTopOf="@+id/activity_main_text1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.102"
        app:srcCompat="@drawable/dado" />

    <Button
        android:id="@+id/ButtonRoll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="roll"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/activity_main_text1" />

</androidx.constraintlayout.widget.ConstraintLayout>